<h1>{{page.title}}</h1>
<p>{{page.content}}</p>

{% assign product = all_products['locao-principal'] %}
<div class="product">
    <p><b>Destaque </b>{{product.title}}</p>
    <img src="{{product.featured_image.src |  image_url: width: '500px'}}" width="500px" height="auto" alt="product.feature_alt">
    <p><b>Preço </b>{{product.price |  money}}</p>
</div>

{% assign collection = collections['colecoes-do-verao'] %}

<h2>{{collection.title}}</h2>
<h3>{{collection.description}}</h3>

<div class="products">
    {% for product in collection.products %}
    <div class="product">
        <p><b>Título do Produto</b> {{product.title}}</p>  
        <img src="{{product.featured_image.src |  image_url: width: '250px'}}" width="250px" height="auto" alt="product.feature_alt">
         <p><b>Preço do Produto </b>{{product.price |  money}}</p> 
    </div>
    {% endfor %}
</div>

<style>
.products {
    display: flex;
    gap: 16px;
}

.product {
    border: 1px solid #ccc;
    padding: 10px;
    max-width: 600px;
}

</style>